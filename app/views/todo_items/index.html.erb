<p id="notice"><%= notice %></p>

<h1>Todo Items</h1>

<table>
  <thead>
    <tr>
      <th><h2>Description</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><h3><%= todo_item.description %></h3></td>
        <td><h3><%= link_to 'Show', todo_item %></h3></td>
        <td><h3><%= link_to 'Edit', edit_todo_item_path(todo_item) %></h3></td>
        <td><h3><%= link_to 'Destroy', todo_item, method: :delete, data: { confirm: 'Are you sure?' } %></h3></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo Item', new_todo_item_path %>
